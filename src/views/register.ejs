<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Registration Form</title>
    <link rel="stylesheet" href="css/register.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</head>
<body>
    <div class="wrapper"> 
        <h2 id="hid">Register</h2>

        <% if (typeof alert !== 'undefined') { %>
          <% alert.forEach((error) => { %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
              <%= error.msg %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% }) %>
        <% } %>

        <% if (typeof successMsg !== 'undefined') { %>
          <div class="alert alert-success" role="alert">
            <%= successMsg %>
          </div>
        <% } %>

        <form id="registerForm" name="form" action="/register" method="POST">
            <div class="input_field">
                <input name="username" type="text" placeholder="Username" id="username" value="<%= typeof username !== 'undefined' ? username : '' %>">
            </div>
            <div class="input_field">
                <input name="email" type="text" placeholder="Email (optional)" id="email" value="<%= typeof email !== 'undefined' ? email : '' %>">
            </div>
            <div class="input_field">
                <input name="phone" type="tel" placeholder="Phone Number" id="phone" value="<%= typeof phone !== 'undefined' ? phone : '' %>" maxlength="16">
            </div>
            <div class="input_field">
                <input name="password" type="password" placeholder="Password" id="pass">
            </div>
            <div class="input_field">
                <input name="dailyWeatherReports" type="checkbox" id="daily-weather" value="true">
                Receive daily weather report texts
            </div>
            <div class="input_field">
                <input name="severeWeatherAlerts" type="checkbox" id="weather-alerts" value="true">
                Receive severe weather alert texts
            </div>
            <input type="submit" value="submit">
        </form>
        <p id="stud">Already registered? Login <a href="./login">here</a>.</p>
    </div>

    <script src="js/register.js"></script>
</body>
</html>